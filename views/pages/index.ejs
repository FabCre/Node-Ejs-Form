<% include header %>

<form action="/" method="post" class="offset-3 col-6 mt-5">
  <div class="form-group">
    <label for="lastName">Lastname</label>
    <input type="text" name="lastName" class="form-control" id="lastName" aria-describedby="emailHelp" placeholder="Lastname">
  </div>
  <div class="form-group">
    <label for="firstName">Firstname</label>
    <input type="text" name="firstName" class="form-control" id="firstName" placeholder="Firstname">
  </div>
  <div class="form-group">
    <label for="message">Your message</label>
    <textarea name="message" class="form-control" id="message" rows="3" placeholder="Message"></textarea>
  </div>
  <button type="submit" class="btn btn-info col-6 offset-3 mb-4">Send my message</button>
</form>

<% if (locals.message) { %>
  <div class="alert alert-info mt-3 mb-3 offset-3 col-6 shadow-lg p-3 rounded justify-content-around" role="alert">
    <h3 class="alert-heading text-center">Your Message : </h3>
    <p>Your Lastname : <%= message.lastName %></p>
    <p>Your Firstname : <%= message.firstName %></p>
    <hr>
    <p class="mb-0"><%= message.message %></p>
  </div>
<% } %>

<div class="card mt-5 offset-3 col-6 shadow-lg rounded p-0">
  <h4 class="card-header text-center">All Messages : </h4>
    <% for (message of messages) { %> 
      <div class="card-body">
        <h5 class="card-title"><%= message.lastname + " " + message.firstname %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= message.date %></h6>
        <p class="card-text"><%= message.message %></p>
      </div>
    <% } %>
</div>

<% include footer %>

